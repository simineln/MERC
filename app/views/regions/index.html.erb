<% content_for :title, "Регионы" %>
<div class="table-responsive">

  
  <!-- Regions -->
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">Регионы
          <%= link_to "Добавить", new_region_path(), :class => "btn btn-outline-success btn-sm", :role => "button" %></h1>
  </div>
  <table class="table table-striped table-sm" style="font-size: 14px; padding-left: 15px">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Название</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @regions.each_with_index do |region, index| %>
        <tr>
          <td scope="row"><%= index + 1 %></td>
          <td><%= region.name %></td>
          <td style="text-align: right;">
            <%= link_to "Изменить", edit_region_path(region), :class => "btn btn-outline-warning btn-xs", :role => "button" %>
            <%= link_to "Удалить", region_path(region), :class => "btn btn-danger btn-xs", :role => "button", method: :delete, data: {confirm: "Вы уверены?"} %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% if false %>
<%= @processed_dates %> <br>
<%= @current_date %> <br>
<%= @date_col %> <br>
<%= @test %>
<% end %>
</div>