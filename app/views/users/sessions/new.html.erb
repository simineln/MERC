<div style="padding-top: 100px"></div>

 <img class="mb-4" src="../../../assets/logo.png" alt="" width="250">
<h2 class="form-signin-heading">MERC</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "Пароль" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Войти" %>
  </div>
  <p class="mt-5 mb-3 text-muted">Sandrologic Group &copy; 2020</p>

<% end %>

<%= render "users/shared/links" %>
